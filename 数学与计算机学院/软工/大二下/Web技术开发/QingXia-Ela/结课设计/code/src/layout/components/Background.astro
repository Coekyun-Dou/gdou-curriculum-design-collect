---
export interface Props {
  url?: string;
}

const { url } = Astro.props;
---

<div
  id="bg"
  style={`background-image: url(${url}); background-size: cover; background-repeat: no-repeat;`}
>
</div>

<style>
  #bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
</style>
